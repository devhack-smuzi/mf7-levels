{
  "compilerOptions": {
    "outDir": "./public/",
    "baseUrl": "./src/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "es2015", "dom"],
    "paths": {},
    "typeRoots": ["./node_modules/@types/webpack"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}